<div class ="results-block mt-2">
  <%= render 'layouts/messages'%>
</div>

<% if @stock%>
    <div class='card card-header mt-4 results-block'>
        <strong>Symbol: </strong><%=@stock.ticker%>
        <strong>Name: </strong><%=@stock.name%>
        <strong>Price: </strong><%=@stock.last_price%>
        <%=link_to 'Add to Portfolio', user_stocks_path(user:current_user, stock:@stock.ticker), class:"btn tbn-xs btn-success",method: :post%>
    </div>
<%end%>